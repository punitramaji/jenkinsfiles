pipeline {
    environment{
        registry = "punitramaji/demo-java"
        registryCredentials = 'dockerhub_id'
        dockerImage = ''
    }
    agent any
    stages {
        stage('Cloning git') {
            steps {
                git 'https://github.com/punitramaji/java-tomcat-maven-example.git'
            }
        }
        stage('Build docker image') {
            steps {
                script {
                    dockerImage = docker.build registry + ":$BUILD_NUMBER"
                }
            }
        }
    }
}
